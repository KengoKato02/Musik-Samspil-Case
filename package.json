{
  "name": "musik-samspil",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "type": "module",
  "scripts": {
    "format:biome": "biome format . --write",
    "biome": "biome check  --unsafe .",
    "lint:eslint": "eslint .",
    "lint-staged": "lint-staged",
    "lint-staged-debug": "lint-staged --debug",
    "start:server": "cross-env NODE_ENV=production pnpm --filter=server start:prod",
    "start:web": "pnpm --filter=web dev",
    "dev": "docker-compose down && docker-compose up --build",
    "dev:clean": "docker-compose down -v && docker-compose up --build",
    "stop": "docker-compose down",
    "stop:clean": "docker-compose down -v",
    "start": "docker-compose -f docker-compose.prod.yml up --build",
    "prepare": "husky && husky install",
    "build": "pnpm --filter=web build && pnpm --filter=server build"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mongodb": "^6.9.0"
  },
  "workspaces": ["apps/*"],
  "author": "",
  "engines": {
    "node": ">=18.16.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.14.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "globals": "^15.11.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "react": "^18.3.1"
  },
  "lint-staged": {
    "*.{json,md,yml}": ["biome format --write"],
    "apps/**/*.{ts,tsx}": ["pnpm biome", "pnpm lint:eslint"]
  }
}

{
  "name": "musik-samspil",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "biome format . --write",
    "biome-lint": "biome lint --write",
    "start:server": "cross-env NODE_ENV=production pnpm --filter=server start:prod",
    "start:web": "pnpm --filter=web dev",
    "start": "docker-compose -f docker-compose.prod.yml up --build",
    "dev": "docker-compose up --build",
    "prepare": "husky && husky install",
    "build": "pnpm --filter=web build && pnpm --filter=server build"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mongodb": "^6.9.0"
  },
  "workspaces": [
    "apps/*"
  ],
  "author": "",
  "engines": {
    "node": ">=18.16.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "react": "^18.3.1"
  },
  "lint-staged": {
    "*.{json,md,yml}": [
      "biome format --write"
    ],
    "*.ts": [
      "eslint --fix",
      "biome format --write",
      "biome lint"
    ],
    "*.tsx": [
      "eslint --fix",
      "biome format --write",
      "biome lint"
    ]
  }
}

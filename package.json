{
  "name": "musik-samspil",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "format": "biome format . --write",
    "biome-lint": "biome lint --write",
    "start:server": "cross-env NODE_ENV=production pnpm --filter=server start:prod",
    "start:web": "pnpm --filter=web dev",
    "start": "cross-env NODE_ENV=production pnpm --stream -r run start",
    "dev": "cross-env NODE_ENV=development concurrently \"pnpm --filter=server start:dev\" \"pnpm --filter=web dev\"",
    "prepare": "husky && husky install",
    "build": "pnpm --filter=web build && pnpm --filter=server build"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "mongodb": "^6.9.0"
  },
  "workspaces": ["apps/*"],
  "author": "",
  "engines": {
    "node": ">=18.16.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.1",
    "@eslint/js": "^8.56.0",
    "@html-eslint/eslint-plugin": "^0.24.0",
    "@html-eslint/parser": "^0.24.0",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-extreme": "^1.0.25",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "react": "^18.3.1"
  },
  "lint-staged": {
    "*.js": ["biome format --write", "biome lint", "eslint --fix"],
    "*.{json,md,yml}": ["biome format --write"]
  }
}

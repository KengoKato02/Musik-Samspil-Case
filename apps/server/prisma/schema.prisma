datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  firstname String?
  lastname  String?
  email     String? @unique
  password  String
}

model Ensemble {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  description   String
  location      Json
  openPositions String[] @map("open_positions")
  isActive      Boolean  @map("is_active")
}
